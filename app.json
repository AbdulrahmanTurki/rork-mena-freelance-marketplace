{
  "expo": {
    "name": "MENA Freelance Marketplace",
    "slug": "mena-freelance-marketplace",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rork-app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.rork.mena-freelance-marketplace",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Rork to access your photos to upload service images and verification documents.",
        "NSCameraUsageDescription": "Allow Rork to access your camera to take photos for your profile or services.",
        "NSMicrophoneUsageDescription": "Allow Rork to access your microphone for video features."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "app.rork.mena_freelance_marketplace",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://rork.com/"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Rork to access your photos to upload service images."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
